<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.sample.Restaurant" table="Restaurant">

        <id name="restaurantName" type="java.lang.String" column="id">
            <generator class="native"/>
        </id>
        <property name="ownerName" column="ownerName" type="java.lang.String"/>
        <property name="establishOn" column="establishOn" type="java.sql.Date"/>
        <property name="restaurantEmail" column="restaurantEmail" type="java.lang.String"/>
        <property name="numberOfEmployee" column="numberOfEmployee" type="int"/>
        <property name="provideHomeDelivery" column="provideHomeDelivery" type="boolean"/>

    </class>
</hibernate-mapping>